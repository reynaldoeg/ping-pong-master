<h1 class='page-header'>Leaderboard</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>score</th>
      <th>Games Played</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.rank %></td>
        <td><%= user.name %></td>
        <td><%= user.rating %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
