<h1 class='page-header'>Leaderboard</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Id</th>
      <th>Email</th>
      <th>score</th>
      <th>Games Played</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.rating %></td>
        <td><%= user.game.length %></td>
      </tr>
    <% end %>
  </tbody>
</table>
