<h1 class='page-header'>History</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>score</th>
      <th>Result</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.created_at %></td>
        <td><%= game.user2_id %></td>
        <td><%= "#{game.user1_score} - #{game.user2_score}" %></td>
        <td><%= 'W' if game.winner == @user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
